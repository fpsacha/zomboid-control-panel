# Project Zomboid Server Manager Configuration

# Server Settings
PORT=3001

# RCON Configuration
RCON_HOST=127.0.0.1
RCON_PORT=27015
RCON_PASSWORD=your_rcon_password_here

# PZ Server Paths (Windows)
PZ_SERVER_PATH=C:\Program Files (x86)\Steam\steamapps\common\Project Zomboid Dedicated Server
PZ_SERVER_BAT=StartServer64.bat
PZ_SAVE_PATH=C:\Users\YourUsername\Zomboid\Server

# Steam Workshop Settings
STEAM_API_KEY=your_steam_api_key_here
MOD_CHECK_INTERVAL=300000

# Scheduler Settings
AUTO_RESTART_ENABLED=false
AUTO_RESTART_CRON=0 */6 * * *
RESTART_WARNING_MINUTES=5

# Logging
LOG_LEVEL=info

{
  "name": "pz-server-manager",
  "version": "0.1.3-alpha",
  "description": "Project Zomboid Server Manager - Web-based admin panel",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:exe": "node build.js",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "lowdb": "^7.0.1",
    "node-cron": "^3.0.3",
    "rcon-srcds": "^2.0.1",
    "socket.io": "^4.8.1",
    "unzipper": "^0.12.3",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "esbuild": "^0.27.1",
    "nodemon": "^3.1.7",
    "pkg": "^5.8.1"
  }
}
